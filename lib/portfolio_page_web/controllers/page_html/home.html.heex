<section id="message-section" class="min-h-screen bg-base-100 p-16">
  <div class="container mx-auto ">
    <h3 class=" inline text-5xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
      Contact Today
    </h3>
    <.form for={%{}} as={:contact} phx-submit="submit" class="space-y-4">
      <div class="flex flex-col md:flex-row gap-4 w-full">
        <div class="flex-1">
          <label class="font-bold">Name</label>
          <input
            type="text"
            name="contact[name]"
            required
            class="input input-bordered w-full"
          />
        </div>

        <div class="flex-1">
          <label class="font-bold">Email</label>
          <label class="input validator w-full">
            <.icon name="hero-envelope" class="size-5" />
            <input type="email" placeholder="mail@site.com" required />
          </label>
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">Message</label>
        <textarea
          name="contact[message]"
          rows="8"
          required
          class="textarea textarea-bordered w-full resize-none"
        ></textarea>
      </div>

      <div class="">
        <.button type="submit" class="btn btn-primary md:btn-xl">
          Send Message
        </.button>
      </div>
    </.form>
  </div>
</section>

